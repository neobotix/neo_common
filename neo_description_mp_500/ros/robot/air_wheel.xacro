<?xml version="1.0"?>

<robot
xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

<macro name="air_wheel_260" params="suffix parent *origin">
 <joint name="${suffix}_joint" type="continuous">
  <insert_block name="origin" />
  <axis xyz="0 1 0" />
  <anchor xyz="0 0 0" />
  <limit effort="100" velocity="100" />
  <joint_properties damping="0.0" friction="0.0" />
  <parent link="${parent}_link" />
  <child link="${suffix}_link" />
 </joint>

 <link name="${suffix}_link">
  <inertial>
  <mass value="0.1" />
   <origin xyz=" 0 0 0 " />
  <inertia ixx="0.012411765597" ixy="0.0" ixz="0.0"
   iyy="0.015218160428" iyz="0.0"
   izz="0.011763977943" />
  </inertial>

  <visual>
   <origin xyz="0 0 0" rpy="0 0 0" />
   <geometry>
    <mesh filename="package://neo_description_mp_500/ros/meshes/air_wheel_260.stl"/>
   </geometry>
   <material name="Black" />
  </visual>

  <collision>
   <origin xyz="0 0 0" rpy="0 0 0" />
   <geometry>
    <mesh filename="package://neo_description_mp_500/ros/meshes/air_wheel_260.stl"/>
   </geometry>
  </collision>
 </link>

 <gazebo reference="${suffix}_link" >
  <mu1 value="100.0" />
  <mu2 value="100.0" />
  <kp value="1000000.0" />
  <kd value="1.0" />
  <material>Gazebo/Grey</material>
 </gazebo>

 <gazebo reference="${suffix}_motor_link" >
  <!--material>Erratic/White</material-->
 </gazebo>

 <transmission type="pr2_mechanism_model/SimpleTransmission" name="${suffix}_trans">
  <actuator name="${suffix}_motor" />
  <joint name="${suffix}_joint" />
  <mechanicalReduction>1.0</mechanicalReduction>
 </transmission>
</macro>
</robot>


